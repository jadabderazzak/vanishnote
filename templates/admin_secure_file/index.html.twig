{% extends 'base.html.twig' %}

{% block title %}
    {{ 'Secure Files' | trans }}
{% endblock %}

{% block body %}
    <div class="w-full mx-auto">
        <div class="bg-gray-50 shadow-md overflow-hidden">
            
            <!-- Header section with title and action buttons -->
            <div class="px-6 py-4 border-b border-gray-200 flex flex-col md:flex-row justify-start md:justify-between items-start md:items-center gap-4 w-full">
                <div class="w-full">
                    <h1 class="text-xl font-bold text-gray-800">{{ 'Secure Files' | trans }}</h1>
                    <p class="text-gray-600 mt-1 text-sm">{{ 'View and manage encrypted files' | trans }}</p>
                </div>
                <div class="flex flex-row justify-between md:justify-end items-center gap-2 w-full">
                    <!-- Placeholder for future action buttons if needed -->
                </div>
            </div>

            <!-- Empty state if no files exist -->
            {% if files is empty %}
                <div class="px-6 py-12 text-center">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12 mx-auto text-gray-400" fill="none" viewbox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 13h6m-3-3v6m-9 1V7a2 2 0 012-2h6l2 2h6a2 2 0 012 2v8a2 2 0 01-2 2H5a2 2 0 01-2-2z"/>
                    </svg>
                    <h3 class="mt-2 text-lg font-medium text-gray-900">{{ 'No files found' | trans }}</h3>
                    <p class="mt-1 text-gray-500">{{ 'Uploaded files will appear here.' | trans }}</p>
                </div>
            {% else %}
                <!-- Files table when records exist -->
                <div class="overflow-x-auto">
                    <table class="min-w-full divide-y divide-gray-200">
                        <thead class="bg-gray-50">
                            <tr>
                                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                    {{ 'Filename' | trans }}
                                </th>
                                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                    {{ 'Type' | trans }}
                                </th>
                                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                    {{ 'Size' | trans }}
                                </th>
                                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                    {{ 'Uploaded' | trans }}
                                </th>
                                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                    {{ 'Owner' | trans }}
                                </th>
                                <th scope="col" class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider text-right">
                                    {{ 'Actions' | trans }}
                                </th>
                            </tr>
                        </thead>
                        <tbody class="bg-white divide-y divide-gray-200">
                            {% for file in files %}
                                <tr class="hover:bg-gray-50 transition-colors duration-150">
                                    <!-- Filename column -->
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <div class="text-sm font-medium text-gray-900">{{ file.filename }}</div>
                                    </td>
                                    
                                    <!-- MIME type column -->
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <div class="text-sm text-gray-500">{{ file.mimeType }}</div>
                                    </td>
                                    
                                    <!-- File size column with human-readable format -->
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <div class="text-xs text-white font-bold text-center bg-trash rounded-xl p-1 w-20">
                                            {% set size = file.size %}

                                            {% if size < 1024 %}
                                            {{ size }} B
                                            {% elseif size < 1024 * 1024 %}
                                            {{ (size / 1024)|round(2) }} KB
                                            {% else %}
                                            {{ (size / (1024 * 1024))|round(2) }} MB
                                            {% endif %}
                                        </div>
                                    </td>
                                    
                                    <!-- Upload date column -->
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <div class="text-sm text-gray-500">
                                            {{ file.uploadedAt|format_datetime(pattern='MMMM d, y HH:mm:ss', locale=app.request.locale) }}
                                        </div>
                                    </td>
                                    
                                    <!-- Owner column -->
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <div class="text-gray-500 underline">
                                           <a href="{{path('app_admin_clients_view',{slug: file.client_slug})}}" class="inline-flex items-center font-medium text-blue-600 dark:text-blue-500 hover:underline">
											{{ file.owner }}
                                        </a>
                                        </div>
                                    </td>
                                    
                                    <!-- Actions column -->
                                    <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                                        <div class="flex justify-end space-x-2">
                                            <!-- Download button -->
                                            <a href="{{ path('app_admin_secure_file_download', {slug: file.slug}) }}" 
                                               class="inline-flex items-center px-3 py-1.5 bg-blue-50 text-blue-600 hover:bg-blue-100 transition-all duration-200 group text-xs font-medium shadow-xs border border-blue-100">
                                                <svg class="w-4 h-4 mr-1.5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewbox="0 0 24 24">
                                                    <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 13V4M7 14H5a1 1 0 0 0-1 1v4a1 1 0 0 0 1 1h14a1 1 0 0 0 1-1v-4a1 1 0 0 0-1-1h-2m-1-5-4 5-4-5m9 8h.01"/>
                                                </svg>
                                                <span>{{ 'Download'|trans }}</span>
                                            </a>
                                            
                                            <!-- Delete button -->
                                         
                                                <button type="submit"  data-modal-target="delete-file-modal{{file.id}}" data-modal-toggle="delete-file-modal{{file.id}}"
                                                        class="inline-flex items-center px-3 py-1.5 bg-red-50 text-red-600 hover:bg-red-100 transition-all duration-200 group text-xs font-medium shadow-xs border border-red-100">
                                                    <svg class="w-4 h-4 mr-1.5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewbox="0 0 24 24">
                                                        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 7h14m-9 3v8m4-8v8M10 3h4a1 1 0 0 1 1 1v3H9V4a1 1 0 0 1 1-1ZM6 7h12v13a1 1 0 0 1-1 1H7a1 1 0 0 1-1-1V7Z"/>
                                                    </svg>
                                                    <span>{{ 'Delete'|trans }}</span>
                                                </button>
                                           
                                            <!-- Delele file  Modal -->
                                            <div id="delete-file-modal{{file.id}}" tabindex="-1" class="hidden overflow-y-auto overflow-x-hidden fixed top-0 right-0 left-0 z-50 justify-center items-center w-full md:inset-0 h-[calc(100%-1rem)] max-h-full bg-gray-900 bg-opacity-50">
                                                <div class="relative p-4 w-full max-w-lg max-h-full">
                                                    <div class="relative bg-white rounded-lg shadow">
                                                        <button type="button" class="absolute top-3 end-2.5 text-gray-400 bg-transparent hover:bg-gray-200 rounded-lg text-sm w-8 h-8 ms-auto inline-flex justify-center items-center" data-modal-hide="delete-file-modal{{file.id}}">
                                                            <svg class="w-3 h-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewbox="0 0 14 14">
                                                                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6"/>
                                                            </svg>
                                                            <span class="sr-only">{{ 'Close modal' | trans }}</span>
                                                        </button>
                                                        <div class="p-6 text-center max-w-full">
                                                            <svg class="mx-auto mb-4 text-gray-400 w-12 h-12" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewbox="0 0 20 20">
                                                                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M10 11V6m0 8h.01M19 10a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z"/>
                                                            </svg>
                                                            <h3 class="mb-4 text-lg font-normal text-gray-700">{{ 'Are you sure you want to delete this file?' | trans }}</h3>
                                                            <p class="mb-6 text-sm text-gray-500 break-words whitespace-normal overflow-hidden">{{ 'This action is irreversible and the file will be permanently deleted' | trans }}</p>
                                                            <div class="flex justify-center space-x-4">
                                                                <a href="{{ path('app_admin_secure_file_delete', {slug: file.slug}) }}" data-modal-hide="delete-file-modal{{file.id}}" type="button" class="px-5 py-2.5 text-sm font-medium text-white bg-red-600 hover:bg-red-700 rounded-lg border border-red-600 focus:ring-4 focus:outline-none focus:ring-red-300 transition-colors">
                                                                    {{ 'Yes, Delete it' | trans }}
                                                                </a>
                                                                <button data-modal-hide="delete-file-modal{{file.id}}" type="button" class="px-5 py-2.5 text-sm font-medium text-gray-700 bg-white hover:bg-gray-100 rounded-lg border border-gray-200 focus:ring-4 focus:outline-none focus:ring-gray-100 transition-colors">
                                                                    {{ 'No, cancel' | trans }}
                                                                </button>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
                
                <!-- Pagination if needed -->
               
                    <div class="navigation px-6 py-4">
                        {{ knp_pagination_render(files) }}
                    </div>
                
            {% endif %}
        </div>
    </div>
{% endblock %}