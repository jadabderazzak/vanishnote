{% extends 'base.html.twig' %}

{% block title %}
    {{ 'Create your VanishNote account'|trans }}
{% endblock %}

{% block body %}
    <div class="flex flex-col justify-center py-12 px-4 sm:px-6 lg:px-8 mt-12">
        <div class="sm:mx-auto sm:w-full sm:max-w-lg">
            <div class="flex flex-col md:flex-row justify-center items-center gap-4">
                <div class="w-16 h-16 bg-trash rounded-full flex items-center justify-center text-white text-2xl font-bold animate-gentle-ping">
                    VN
                </div>
                <div class="flex items-center">
                    <h2 class="text-center text-3xl font-bold text-gray-900">
                        {{ 'Create your account'|trans }}
                    </h2>
                </div>
            </div>
            <p class="mt-2 text-center text-sm text-gray-600 max-w-lg mx-auto">
                {{ 'Start managing secure, temporary notes in less than a minute'|trans }}
            </p>
        </div>

        <div class="mt-8 sm:mx-auto sm:w-full sm:max-w-lg">
            <div class="bg-white py-8 px-6 shadow-xl rounded-xl sm:px-10 border border-gray-100">
                {{ form_start(registrationForm, {'attr': {'class': 'space-y-6'}}) }}
                    <div>
                        {{ form_label(registrationForm.name, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                        <div class="mt-1 relative rounded-md shadow-sm">
                            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                <svg class="h-5 w-5 text-gray-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                                    <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd" />
                                </svg>
                            </div>
                            {{ form_widget(registrationForm.name, {'attr': {
                                'class': 'focus:ring-indigo-500 focus:border-indigo-500 block w-full pl-10 pr-3 py-2.5 border border-gray-300 rounded-md placeholder-gray-400 sm:text-sm',
                                'placeholder': 'Enter your full name'
                            }}) }}
                        </div>
                 
                         <span class="text-sm text-red-700">{{ form_errors(registrationForm.name) }}</span>
                    </div>

                    <div>
                        {{ form_label(registrationForm.email, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                        <div class="mt-1 relative rounded-md shadow-sm">
                            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                <svg class="h-5 w-5 text-gray-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                                    <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z"/>
                                    <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z"/>
                                </svg>
                            </div>
                            {{ form_widget(registrationForm.email, {'attr': {
                                'class': 'focus:ring-indigo-500 focus:border-indigo-500 block w-full pl-10 pr-3 py-2.5 border border-gray-300 rounded-md placeholder-gray-400 sm:text-sm',
                               
                            }}) }}
                        </div>
                         <span class="text-sm text-red-700">{{ form_errors(registrationForm.email) }}</span>
                    </div>

                    <div>
                        {{ form_label(registrationForm.password, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                        <div class="mt-1 relative rounded-md shadow-sm">
                            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                <svg class="h-5 w-5 text-gray-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                                    <path fill-rule="evenodd" d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z" clip-rule="evenodd"/>
                                </svg>
                            </div>
                            {{ form_widget(registrationForm.password, {'attr': {
                                'class': 'focus:ring-indigo-500 focus:border-indigo-500 block w-full pl-10 pr-3 py-2.5 border border-gray-300 rounded-md placeholder-gray-400 sm:text-sm',
                                'placeholder': 'Create a secure password'
                            }}) }}
                        </div>
                       
                         <span class="text-sm text-red-700">{{ form_errors(registrationForm.password) }}</span>
                    </div>

                    <div>
                        {{ form_label(registrationForm.confirm_password, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                        <div class="mt-1 relative rounded-md shadow-sm">
                            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                <svg class="h-5 w-5 text-gray-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                                    <path fill-rule="evenodd" d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z" clip-rule="evenodd"/>
                                </svg>
                            </div>
                            {{ form_widget(registrationForm.confirm_password, {'attr': {
                                'class': 'focus:ring-indigo-500 focus:border-indigo-500 block w-full pl-10 pr-3 py-2.5 border border-gray-300 rounded-md placeholder-gray-400 sm:text-sm',
                                'placeholder': 'Confirm your password'
                            }}) }}
                        </div>

                        <span class="text-sm text-red-700">{{ form_errors(registrationForm.confirm_password) }}</span>
                    </div>

                    <div class="flex items-center">
                        <input id="terms" name="terms" type="checkbox" required class="h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300 rounded">
                        <label for="terms" class="ml-2 block text-sm text-gray-700">
                            {{ 'By continuing, you agree to our'|trans }} <a href="#" class="font-medium text-indigo-600 hover:text-indigo-500">{{ 'Terms of Service'|trans }}</a> {{ 'and'|trans }} <a href="#" class="font-medium text-indigo-600 hover:text-indigo-500">{{ 'Privacy Policy'|trans }}</a>
                        </label>
                        
                    </div>

                    <div>
                        <button type="submit" class="group relative w-full flex justify-center py-2.5 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-trash hover:bg-trash_bold focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-trash transition-colors duration-200">
                            <span class="absolute left-0 inset-y-0 flex items-center pl-3">
                                <svg class="h-5 w-5 text-trash_bold group-hover:text-trash" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                                </svg>
                            </span>
                            {{ 'Create account'|trans }}
                        </button>
                    </div>
                {{ form_end(registrationForm) }}

                <div class="mt-6">
                    <div class="relative">
                        <div class="absolute inset-0 flex items-center">
                            <div class="w-full border-t border-gray-200"></div>
                        </div>
                        <div class="relative flex justify-center text-sm">
                            <span class="px-2 bg-white text-gray-500">
                                {{ 'Already have an account'|trans }}?
                            </span>
                        </div>
                    </div>

                    <div class="mt-6">
                        <a href="{{ path('app_login') }}" class="w-full flex justify-center py-2.5 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-colors duration-200">
                            {{ 'Sign in instead'|trans }}
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}