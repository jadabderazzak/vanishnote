{# templates/secure_files/index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}
    {{ 'My Secure Files'|trans }}
{% endblock %}

{% block body %}
    <div class="bg-white mb-6 p-2">
        <div class="w-full mx-auto">
            <!-- Header -->
            <div class="text-center mb-4 p-8">
          
                <h1 class="text-2xl font-bold text-gray-900">
            <span class="text-trash">{{ 'My Secure'|trans }}</span> {{ 'Files'|trans }}
            </h1>
                <p class="mt-2 text-xs text-gray-600 max-w-3xl mx-auto">
                    {{ 'Manage all your secure files in one place'|trans }}
                </p>
            </div>

            <!-- Files Table -->
            <div class="bg-white border border-gray-200 overflow-hidden w-full rounded-[15px] shadow-[0_5px_12px_rgba(0,0,0,0.06)] transition-all duration-300 ease-in-out">
                <div class="px-6 py-5 bg-gray-50 border-b border-gray-200 flex justify-between items-center">
                    <h2 class="text-lg font-medium text-gray-900">
                        {{ 'Files List'|trans }}
                    </h2>
                    
                    <a href="{{ path('app_secure_files_add') }}" 
                       class="flex items-center space-x-2 px-5 py-2 bg-trash hover:bg-trash_bold font-thin text-white rounded-sm transition-all">
                        <svg class="h-5 w-5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24">
                            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 12h14m-7 7V5"/>
                        </svg>
                        <span class="text-sm">{{ 'Upload New File'|trans }}</span>
                    </a>
                </div>

                <div class="overflow-x-auto">
                    <table class="min-w-full divide-y divide-gray-200">
                        <thead class="bg-gray-50">
                            <tr>
                                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                    {{ 'Filename'|trans }}
                                </th>
                                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                    {{ 'Uploaded'|trans }}
                                </th>
                                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                    {{ 'Type'|trans }}
                                </th>
                                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                    {{ 'Size'|trans }}
                                </th>
                                <th scope="col" class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
                                    {{ 'Actions'|trans }}
                                </th>
                            </tr>
                        </thead>
                        <tbody class="bg-white divide-y divide-gray-200">
                            {% for file in files %}
                                <tr class="hover:bg-gray-50 transition-colors duration-150">
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <div class="flex items-center">
                                            <div class="flex-shrink-0 h-10 w-10 rounded-lg 
                                                {% if 'image/' in file.mimeType %}bg-blue-50 text-blue-600
                                                {% elseif 'application/pdf' in file.mimeType %}bg-red-50 text-red-600
                                                {% elseif 'text/' in file.mimeType %}bg-green-50 text-green-600
                                                {% else %}bg-gray-50 text-gray-600{% endif %} 
                                                flex items-center justify-center mr-4">
                                                {% if 'image/' in file.mimeType %}
                                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                                                    </svg>
                                                {% elseif 'application/pdf' in file.mimeType %}
                                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21h10a2 2 0 002-2V9.414a1 1 0 00-.293-.707l-5.414-5.414A1 1 0 0012.586 3H7a2 2 0 00-2 2v14a2 2 0 002 2z" />
                                                    </svg>
                                                {% elseif 'text/' in file.mimeType %}
                                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                                                    </svg>
                                                {% else %}
                                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21h10a2 2 0 002-2V9.414a1 1 0 00-.293-.707l-5.414-5.414A1 1 0 0012.586 3H7a2 2 0 00-2 2v14a2 2 0 002 2z" />
                                                    </svg>
                                                {% endif %}
                                            </div>
                                            <div>
                                                <div class="text-sm font-medium text-gray-900">
                                                    {{ file.filename|u.truncate(40, '...') }}
                                                </div>
                                                <div class="text-sm text-gray-500">
                                                    {{ file.mimeType }}
                                                </div>
                                            </div>
                                        </div>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <div class="text-sm text-gray-900">
                                            {{ file.uploadedAt|format_datetime(pattern='MMMM d, y', locale=app.request.locale) }}
                                        </div>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full 
                                            {% if 'image/' in file.mimeType %}bg-blue-100 text-blue-800
                                            {% elseif 'application/pdf' in file.mimeType %}bg-red-100 text-red-800
                                            {% elseif 'text/' in file.mimeType %}bg-green-100 text-green-800
                                            {% else %}bg-gray-100 text-gray-800{% endif %}">
                                            {% if 'image/' in file.mimeType %}
                                                {{ 'Image'|trans }}
                                            {% elseif 'application/pdf' in file.mimeType %}
                                                {{ 'PDF'|trans }}
                                            {% elseif 'text/' in file.mimeType %}
                                                {{ 'Text'|trans }}
                                            {% else %}
                                                {{ 'File'|trans }}
                                            {% endif %}
                                        </span>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-trash_bold text-white">
                                            {{ (file.size / 1024 / 1024)|round(2) }} MB
                                        </span>
                                    </td>
                                    <td class="px-2 py-4 whitespace-nowrap text-right text-sm font-medium space-x-0">
                                        <!-- Download crypted File -->
                                        <a href="{{ path('app_encrypted_file_download', {slug: file.slug}) }}" 
                                           class="inline-flex items-center px-3 py-1.5 bg-blue-50 text-blue-600 hover:bg-blue-100 transition-all duration-200 group text-xs font-medium shadow-xs border border-blue-100">
                                            <svg class="w-4 h-4 mr-1.5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24">
                                                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 13V4M7 14H5a1 1 0 0 0-1 1v4a1 1 0 0 0 1 1h14a1 1 0 0 0 1-1v-4a1 1 0 0 0-1-1h-2m-1-5-4 5-4-5m9 8h.01"/>
                                            </svg>
                                            <span>{{ 'Download Encrypted file'|trans }}</span>
                                        </a>

                                        <!-- Download uncrypted File -->
                                        <a href="{{ path('app_decrypted_file_download', {slug: file.slug}) }}" 
                                           class="inline-flex items-center px-3 py-1.5 bg-blue-50 text-blue-600 hover:bg-blue-100 transition-all duration-200 group text-xs font-medium shadow-xs border border-blue-100">
                                            <svg class="w-4 h-4 mr-1.5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24">
                                                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 13V4M7 14H5a1 1 0 0 0-1 1v4a1 1 0 0 0 1 1h14a1 1 0 0 0 1-1v-4a1 1 0 0 0-1-1h-2m-1-5-4 5-4-5m9 8h.01"/>
                                            </svg>
                                            <span>{{ 'Download decrypted file'|trans }}</span>
                                        </a>    

                                        <!-- Delete Button -->
                                        <button data-modal-target="delete-file-modal{{file.id}}" data-modal-toggle="delete-file-modal{{file.id}}" 
                                                class="inline-flex items-center px-3 py-1.5 bg-red-50 text-red-600 hover:bg-red-100 transition-all duration-200 group text-xs font-medium shadow-xs border border-red-100">
                                            <svg class="w-4 h-4 mr-1.5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24">
                                                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 7h14m-9 3v8m4-8v8M10 3h4a1 1 0 0 1 1 1v3H9V4a1 1 0 0 1 1-1ZM6 7h12v13a1 1 0 0 1-1 1H7a1 1 0 0 1-1-1V7Z"/>
                                            </svg>
                                            <span>{{ 'Delete'| trans }}</span>
                                        </button>
                                    </td>
                                </tr>
                                
                                <!-- Delete File Modal -->
                                <div id="delete-file-modal{{file.id}}" tabindex="-1" class="hidden overflow-y-auto overflow-x-hidden fixed top-0 right-0 left-0 z-50 justify-center items-center w-full md:inset-0 h-[calc(100%-1rem)] max-h-full bg-gray-900 bg-opacity-50">
                                    <div class="relative p-4 w-full max-w-md max-h-full">
                                        <div class="relative bg-white rounded-lg shadow">
                                            <button type="button" class="absolute top-3 end-2.5 text-gray-400 bg-transparent hover:bg-gray-200 rounded-lg text-sm w-8 h-8 ms-auto inline-flex justify-center items-center" data-modal-hide="delete-file-modal{{file.id}}">
                                                <svg class="w-3 h-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 14">
                                                    <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6"/>
                                                </svg>
                                                <span class="sr-only">{{ 'Close modal'|trans }}</span>
                                            </button>
                                            <div class="p-6 text-center">
                                                <svg class="mx-auto mb-4 text-gray-400 w-12 h-12" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 20 20">
                                                    <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M10 11V6m0 8h.01M19 10a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z"/>
                                                </svg>
                                                <h3 class="mb-4 text-lg font-normal text-gray-700">{{ 'Are you sure you want to delete this file?'|trans }}</h3>
                                                <p class="mb-6 text-sm text-gray-500">{{ 'This action cannot be undone and the file will be permanently deleted.'|trans }}</p>
                                                <div class="flex justify-center space-x-4">
                                                    <a href="{{ path('app_secure_file_delete', {slug: file.slug}) }}" data-modal-hide="delete-file-modal{{file.id}}" type="button" class="px-5 py-2.5 text-sm font-medium text-white bg-red-600 hover:bg-red-700 rounded-lg border border-red-600 focus:ring-4 focus:outline-none focus:ring-red-300 transition-colors">
                                                        {{ 'Yes, delete it'|trans }}
                                                    </a>
                                                    <button data-modal-hide="delete-file-modal{{file.id}}" type="button" class="px-5 py-2.5 text-sm font-medium text-gray-700 bg-white hover:bg-gray-100 rounded-lg border border-gray-200 focus:ring-4 focus:outline-none focus:ring-gray-100 transition-colors">
                                                        {{ 'No, cancel'|trans }}
                                                    </button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            {% else %}
                                <tr>
                                    <td colspan="5" class="px-6 py-4 text-center text-sm text-gray-500">
                                        {{ 'No files found'|trans }}
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
                
                {% if files|length > 0 %}
                    <div class="navigation px-6 py-4">
                        {{ knp_pagination_render(files) }}
                    </div>
                {% endif %}
            </div>
            
            <!-- Additional Info -->
            <div class="mt-16 text-center">
                <h3 class="text-lg font-medium text-gray-900">{{ 'Need help?'|trans }}</h3>
                <p class="mt-2 text-gray-600 max-w-2xl mx-auto">
                    {{ 'Contact our support team if you have any questions about your files.'|trans }}
                </p>
                <div class="mt-6">
                    <a href="#" class="inline-flex items-center text-blue-600 hover:text-blue-500 font-medium">
                        {{ 'Contact Support'|trans }}
                        <svg class="ml-2 h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"/>
                        </svg>
                    </a>
                </div>
            </div>
        </div>
    </div>
    
    <script>
        function copyLinkToClipboard(el) {
            const link = el.getAttribute('data-link');
            navigator.clipboard.writeText(link).then(() => {
                toastr.success('{{ "Link copied"|trans }}');
            }).catch(err => {
                toastr.error('{{ "Failed to copy link"|trans }}');
            });
        }
        
        function toggleShareMenu(button) {
            const menu = button.nextElementSibling;
            
            // Fermer les autres menus déjà ouverts
            document.querySelectorAll('.share-float-menu').forEach(m => m.remove());

            if (!menu.classList.contains('hidden')) {
                menu.classList.add('hidden');
                return;
            }

            const rect = button.getBoundingClientRect();
            const clone = menu.cloneNode(true);
            clone.classList.remove('hidden');
            clone.classList.add('share-float-menu');
            clone.style.position = 'absolute';
            clone.style.top = `${rect.bottom + window.scrollY}px`;
            clone.style.left = `${rect.left + window.scrollX}px`;
            clone.style.zIndex = 9999;
            document.body.appendChild(clone);

            // Clic en dehors pour fermer
            document.addEventListener('click', function onClickOutside(e) {
                if (!clone.contains(e.target) && !button.contains(e.target)) {
                    clone.remove();
                    document.removeEventListener('click', onClickOutside);
                }
            });
        }
    </script>
{% endblock %}