{% extends 'base.html.twig' %}

{% block title %}{{ 'Contact Support'|trans }}{% endblock %}

{% block body %}
<div class="flex items-center justify-center w-full ">
    <div class="bg-white overflow-hidden  w-full ">
        {# Main Content #}
        <div class="flex flex-col md:flex-row">
            {# Left Column - Form #}
            <div class="w-full md:w-2/3 p-8 md:p-10">
                <div class="flex items-center mb-8">
                    <div class="bg-indigo-100 p-3 rounded-lg mr-4">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-trash_bold" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                        </svg>
                    </div>
                    <div>
                        <h1 class="text-2xl font-bold text-gray-900">
                            <span class="text-trash">{{ 'Support'|trans }}</span>
                        </h1>
                        <p class="text-sm text-gray-600">{{ 'Our team will get back to you as soon as possible'|trans }}</p>
                    </div>
                </div>

                {# Flash messages #}
                {% for label, messages in app.flashes %}
                    {% for message in messages %}
                        <div class="mb-6 p-4 rounded-lg bg-{{ label }}-100 text-{{ label }}-700">
                            {{ message }}
                        </div>
                    {% endfor %}
                {% endfor %}

                {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}

                    {# User Information Section #}
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <div class="space-y-2">
                            {{ form_label(form.nameClient, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                            {{ form_widget(form.nameClient, {'attr': {
                                'class': 'block w-full px-4 py-3 rounded-lg border border-trash focus:border-trash_bold focus:ring-trash_bold placeholder-gray-400 placeholder:text-sm'
                            }}) }}
                            <div class="text-red-500 text-sm">{{ form_errors(form.nameClient) }}</div>
                        </div>

                        <div class="space-y-2">
                            {{ form_label(form.emailClient, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                            {{ form_widget(form.emailClient, {'attr': {
                                'class': 'block w-full px-4 py-3 rounded-lg border border-gray-300 bg-gray-100 focus:border-gray-400 focus:ring-gray-400 placeholder-gray-400 placeholder:text-sm '
                            }}) }}
                            <div class="text-red-500 text-sm">{{ form_errors(form.emailClient) }}</div>
                        </div>
                    </div>

                    {# Message Section #}
                    <div class="space-y-2">
                        {{ form_label(form.title, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                        {{ form_widget(form.title, {'attr': {
                            'class': 'block w-full px-4 py-3 rounded-lg border border-trash focus:border-trash_bold focus:ring-trash_bold placeholder-gray-400 placeholder:text-sm'
                        }}) }}
                        <div class="text-red-500 text-sm">{{ form_errors(form.title) }}</div>
                    </div>

                    <div class="space-y-2">
                        {{ form_label(form.message, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                        {{ form_widget(form.message, {'attr': {
                            'class': 'block w-full px-4 py-3 rounded-lg border border-trash focus:border-trash_bold focus:ring-trash_bold placeholder-gray-400 placeholder:text-sm min-h-[150px]',
                            'rows': 6
                        }}) }}
                        <div class="text-red-500 text-sm">{{ form_errors(form.message) }}</div>
                        <p class="text-xs text-gray-500">{{ 'Please describe your issue in as much detail as possible'|trans }}</p>
                    </div>

                    {# Recipient Selection #}
                    <div class="space-y-2">
                        {{ form_label(form.email, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                        {{ form_widget(form.email, {'attr': {
                            'class': 'block w-full px-4 py-3 rounded-lg border border-trash focus:border-trash_bold focus:ring-trash_bold placeholder-gray-400'
                        }}) }}
                        <div class="text-red-500 text-sm">{{ form_errors(form.email) }}</div>
                        <p class="text-xs text-gray-500">{{ 'Select the appropriate department for your request'|trans }}</p>
                    </div>

                    {# Submit Button #}
                    <div class="pt-4">
                       <button type="submit" class="w-full flex justify-center items-center btn-general" id="submit-button">
                            <span id="button-text">{{ 'Send Message'|trans }}</span>
                            <svg id="submit-icon" class="ml-3 h-5 w-5 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8"/>
                            </svg>
                            <svg id="loading-spinner" class="hidden ml-3 h-5 w-5 text-white animate-spin" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                                <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                                <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                            </svg>
                        </button>
                    </div>

                {{ form_end(form) }}
            </div>

            {# Right Column - Information Panel #}
            <div class="w-full md:w-1/3 bg-gray-50 p-8 md:p-10 border-t md:border-t-0 md:border-l border-gray-200">
                <div class="sticky top-10 space-y-8">
                    <div class="space-y-4">
                        <h3 class="text-lg font-bold text-gray-900 flex items-center">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-trash_bold mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                            </svg>
                            {{ 'How to Get Help Faster'|trans }}
                        </h3>
                        <ul class="space-y-3 text-sm text-gray-600">
                            <li class="flex items-start">
                                <svg class="h-5 w-5 text-green-500 mr-2 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                                </svg>
                                <span>{{ 'Select the most relevant department for your issue'|trans }}</span>
                            </li>
                            <li class="flex items-start">
                                <svg class="h-5 w-5 text-green-500 mr-2 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                                </svg>
                                <span>{{ 'Provide clear and detailed information'|trans }}</span>
                            </li>
                            <li class="flex items-start">
                                <svg class="h-5 w-5 text-green-500 mr-2 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                                </svg>
                                <span>{{ 'Include any relevant error messages or screenshots'|trans }}</span>
                            </li>
                        </ul>
                    </div>

                    <div class="space-y-4">
                        <h3 class="text-lg font-bold text-gray-900 flex items-center">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-trash_bold mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/>
                            </svg>
                            {{ 'Response Time'|trans }}
                        </h3>
                        <div class="text-sm text-gray-600 space-y-2">
                            <p>{{ 'Our standard response times are:'|trans }}</p>
                            <ul class="list-disc pl-5 space-y-1">
                                <li>{{ 'Urgent issues: within 2 business hours'|trans }}</li>
                                <li>{{ 'Standard requests: within 24 business hours'|trans }}</li>
                                <li>{{ 'Complex issues: within 48 business hours'|trans }}</li>
                            </ul>
                            <p class="pt-2 text-xs">{{ 'Response times may vary based on request volume'|trans }}</p>
                        </div>
                    </div>

                    <div class="space-y-4 pt-4 border-t border-gray-200">
                        <h3 class="text-lg font-bold text-gray-900 flex items-center">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-trash_bold mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
                            </svg>
                            {{ 'Confidentiality Notice'|trans }}
                        </h3>
                        <div class="text-xs text-gray-500">
                            <p>{{ 'All information submitted through this form is treated as confidential. We use your data solely to address your support request and improve our services.'|trans }}</p>
                            <p class="mt-2">
                                {{ 'For more details, please review our'|trans }}
                                <a href="{{ path('app_privacy') }}" target="_blank" class="text-trash hover:underline">
                                    {{ 'Privacy Policy'|trans }}
                                </a>.
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
{% block javascripts %}
    {{ parent()}}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const form = document.querySelector('form');
            const submitButton = document.getElementById('submit-button');
            const buttonText = document.getElementById('button-text');
            const submitIcon = document.getElementById('submit-icon');
            const loadingSpinner = document.getElementById('loading-spinner');

            if (form) {
                form.addEventListener('submit', function() {
                    // Disable the button to prevent multiple submissions
                    submitButton.disabled = true;
                    
                    // Change the text
                    buttonText.textContent = '{{ "Sending your message..."|trans }}';
                    
                    // Hide the send icon and show loading spinner
                    submitIcon.classList.add('hidden');
                    loadingSpinner.classList.remove('hidden');
                });
            }
        });
</script>
{% endblock %}