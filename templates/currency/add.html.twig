{# templates/currency/add.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}{{ (update ? 'Edit Currency' : 'Add New Currency') | trans }}{% endblock %}

{% block body %}
<div class="max-w-md mx-auto p-8 bg-white rounded-lg shadow-xl mt-12 border border-gray-100 mt-24">
    <div class="text-center mb-8">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12 mx-auto text-blue-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
        <h1 class="text-2xl font-bold text-gray-800 mt-4">{{ (update ? 'Edit Currency' : 'Add New Currency') | trans }}</h1>
        <p class="text-gray-500 mt-2">{{ (update ? 'Update Currency Details' : 'Fill in the details to add a new currency') | trans }}</p>
    </div>

    {{ form_start(form) }}
        <div class="space-y-6">
            <div>
                {{ form_label(form.code, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                {{ form_widget(form.code, {'attr': {
                    'class': 'w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent',
 
                }}) }}
                 <span class="text-sm text-red-700">{{ form_errors(form.code) }}</span>
                
            </div>

            <div>
                {{ form_label(form.name, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                {{ form_widget(form.name, {'attr': {
                    'class': 'w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent',
                   
                }}) }}
                <span class="text-sm text-red-700"> {{ form_errors(form.name) }}</span>
            </div>

            <div>
                {{ form_label(form.symbol, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                {{ form_widget(form.symbol, {'attr': {
                    'class': 'w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent',
                   
                }}) }}
                 <span class="text-sm text-red-700">{{ form_errors(form.symbol) }}</span>
            </div>

            <div class="flex items-start">
                <div class="flex items-center h-5">
                    {{ form_widget(form.isPrimary, {'attr': {'class': 'h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded'}}) }}
                </div>
                <div class="ml-3 text-sm">
                    {{ form_label(form.isPrimary, null, {'label_attr': {'class': 'font-medium text-gray-700'}}) }}
                    <p class="text-gray-500">{{ 'Set as primary currency for the system' | trans }}</p>
                </div>
                 <span class="text-sm text-red-700">{{ form_errors(form.isPrimary) }}</span>
            </div>

            <div class="flex items-center justify-between pt-4 border-t border-gray-200">
                <a href="{{ path('app_currency') }}" class="px-4 py-2 text-sm font-medium text-gray-700 bg-gray-100 rounded-lg hover:bg-gray-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
                    {{ 'Cancel' | trans }}
                </a>
                <button type="submit" class="px-6 py-2 bg-gradient-to-r from-blue-500 to-blue-600 text-white font-medium rounded-lg shadow-sm hover:from-blue-600 hover:to-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition duration-150 ease-in-out">
                    {{ 'Save Currency' | trans }}
                </button>
            </div>
        </div>
    {{ form_end(form) }}
</div>
{% endblock %}