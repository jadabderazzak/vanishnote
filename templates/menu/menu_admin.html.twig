<!-- Script pour gérer l'ouverture/fermeture du sidebar -->
<script>
document.addEventListener('DOMContentLoaded', function() {
    const sidebar = document.getElementById('sidebar');
    const mobileButton = document.getElementById('mobile-menu-button');
    const backdrop = document.getElementById('sidebar-backdrop');
    
    // Fonction pour fermer le sidebar
    const closeSidebar = () => {
        sidebar.classList.add('-translate-x-full');
        backdrop.classList.add('hidden');
    };
    
    // Fonction pour ouvrir le sidebar
    const openSidebar = () => {
        sidebar.classList.remove('-translate-x-full');
        backdrop.classList.remove('hidden');
    };
    
    // Toggle sidebar
    mobileButton.addEventListener('click', function() {
        if (sidebar.classList.contains('-translate-x-full')) {
            openSidebar();
        } else {
            closeSidebar();
        }
    });
    
    // Fermer quand on clique sur le backdrop
    backdrop.addEventListener('click', closeSidebar);
    
    // Fermer quand on clique sur un lien du menu
    document.querySelectorAll('#sidebar a').forEach(link => {
        link.addEventListener('click', function() {
            if (window.innerWidth < 768) {
                closeSidebar();
            }
        });
    });
    
    // Gestion automatique du responsive
    const handleResize = () => {
        if (window.innerWidth >= 768) {
            // Sur desktop - toujours visible
            sidebar.classList.remove('-translate-x-full');
            backdrop.classList.add('hidden');
        } else {
            // Sur mobile - toujours caché par défaut
            sidebar.classList.add('-translate-x-full');
            backdrop.classList.add('hidden');
        }
    };
    
    // Écouteur de redimensionnement
    window.addEventListener('resize', handleResize);
    
    // Initialisation au chargement
    handleResize();
});
</script>