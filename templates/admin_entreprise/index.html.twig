{# templates/admin_entreprise/index.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}
	{{ 'Company Settings'|trans }}
{% endblock %}

{% block body %}
	<div class="w-full mx-auto p-8 bg-white  shadow-md ">

		<div class="text-center mb-8">
			<h1 class="text-2xl font-bold text-gray-800">{{ 'Company Settings'|trans }}</h1>
			<p class="text-gray-500 mt-2">{{ 'Configure your company information and billing settings'|trans }}</p>
		</div>

		{# Flash messages #}
		{% for label, messages in app.flashes %}
			{% for message in messages %}
				<div class="mb-6 px-4 py-3 rounded text-sm font-medium
						                {% if label == 'success' %} bg-green-100 text-green-800
						                {% elseif label == 'error' or label == 'danger' %} bg-red-100 text-red-800
						                {% else %} bg-gray-100 text-gray-800 {% endif %}">
					{{ message }}
				</div>
			{% endfor %}
		{% endfor %}

		{{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}

		<div class="bg-gray-50 p-5 rounded-lg">
			<h2 class="text-lg font-semibold text-gray-800 mb-4">{{ 'Company Information'|trans }}</h2>

			<div class="grid grid-cols-1 md:grid-cols-2 gap-5">
				<div>
					{{ form_label(form.companyName, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
					{{ form_widget(form.companyName, {'attr': {'class': 'w-full px-3 py-2 text-sm border border-gray-300 rounded focus:ring-1 focus:ring-blue-500 focus:border-blue-500'}}) }}
					<span class="text-sm text-red-600 mt-1">{{ form_errors(form.companyName) }}</span>
				</div>

				<div>
					{{ form_label(form.companyEmail, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
					{{ form_widget(form.companyEmail, {'attr': {'class': 'w-full px-3 py-2 text-sm border border-gray-300 rounded focus:ring-1 focus:ring-blue-500 focus:border-blue-500'}}) }}
					<span class="text-sm text-red-600 mt-1">{{ form_errors(form.companyEmail) }}</span>
				</div>

				<div>
					{{ form_label(form.companyPhone, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
					{{ form_widget(form.companyPhone, {'attr': {'class': 'w-full px-3 py-2 text-sm border border-gray-300 rounded focus:ring-1 focus:ring-blue-500 focus:border-blue-500'}}) }}
					<span class="text-sm text-red-600 mt-1">{{ form_errors(form.companyPhone) }}</span>
				</div>

				<div>
					{{ form_label(form.companyAddress, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
					{{ form_widget(form.companyAddress, {'attr': {'class': 'w-full px-3 py-2 text-sm border border-gray-300 rounded focus:ring-1 focus:ring-blue-500 focus:border-blue-500'}}) }}
					<span class="text-sm text-red-600 mt-1">{{ form_errors(form.companyAddress) }}</span>
				</div>
			</div>
		</div>

		<div class="bg-gray-50 p-5 rounded-lg mt-6">
			<h2 class="text-lg font-semibold text-gray-800 mb-4">{{ 'Email Configuration'|trans }}</h2>

			<div class="grid grid-cols-1 md:grid-cols-2 gap-5">
				<div>
					{{ form_label(form.noReplyEmail, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
					{{ form_widget(form.noReplyEmail, {'attr': {'class': 'w-full px-3 py-2 text-sm border border-gray-300 rounded focus:ring-1 focus:ring-blue-500 focus:border-blue-500'}}) }}
					<span class="text-sm text-red-600 mt-1">{{ form_errors(form.noReplyEmail) }}</span>
				</div>

				<div>
					{{ form_label(form.supportEmail, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
					{{ form_widget(form.supportEmail, {'attr': {'class': 'w-full px-3 py-2 text-sm border border-gray-300 rounded focus:ring-1 focus:ring-blue-500 focus:border-blue-500'}}) }}
					<span class="text-sm text-red-600 mt-1">{{ form_errors(form.supportEmail) }}</span>
				</div>

				<div>
					{{ form_label(form.contactEmail, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
					{{ form_widget(form.contactEmail, {'attr': {'class': 'w-full px-3 py-2 text-sm border border-gray-300 rounded focus:ring-1 focus:ring-blue-500 focus:border-blue-500'}}) }}
					<span class="text-sm text-red-600 mt-1">{{ form_errors(form.contactEmail) }}</span>
				</div>
			</div>
		</div>



		<div class="bg-gray-50 p-5 rounded-lg">
			<h2 class="text-lg font-semibold text-gray-800 mb-4">{{ 'Tax & Billing'|trans }}</h2>

			<div class="grid grid-cols-1 md:grid-cols-2 gap-5">
				<div class="flex items-center">
					{{ form_widget(form.tvaApplicable, {'attr': {'class': 'h-4 w-4 text-blue-600 border-gray-300 rounded focus:ring-blue-500'}}) }}
					{{ form_label(form.tvaApplicable, null, {'label_attr': {'class': 'ml-2 block text-sm text-gray-700'}}) }}
				</div>
								<div class="flex items-center">
					{{ form_widget(form.showLogoOnInvoice, {'attr': {'class': 'h-4 w-4 text-blue-600 border-gray-300 rounded focus:ring-blue-500'}}) }}
					{{ form_label(form.showLogoOnInvoice, null, {'label_attr': {'class': 'ml-2 block text-sm text-gray-700'}}) }}
				</div>

				<div>
					{{ form_label(form.tvaRate, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
					<div class="relative rounded-md shadow-sm">
						{{ form_widget(form.tvaRate, {'attr': {'class': 'block w-full pl-3 pr-8 py-2 text-sm border border-gray-300 rounded focus:ring-1 focus:ring-blue-500 focus:border-blue-500'}}) }}
						<div class="absolute inset-y-0 right-0 flex items-center pr-3 pointer-events-none">
							<span class="text-gray-500 text-sm">%</span>
						</div>
					</div>
					<span class="text-sm text-red-600 mt-1">
						{{ form_errors(form.tvaRate) }}</span>
				</div>

				<div>
					{{ form_label(form.vatNumber, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
					{{ form_widget(form.vatNumber, {'attr': {'class': 'w-full px-3 py-2 text-sm border border-gray-300 rounded focus:ring-1 focus:ring-blue-500 focus:border-blue-500'}}) }}
					<span class="text-sm text-red-600 mt-1">{{ form_errors(form.vatNumber) }}</span>
				</div>

				

				<div>
					{{ form_label(form.invoicePrefix, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
					{{ form_widget(form.invoicePrefix, {'attr': {'class': 'w-full px-3 py-2 text-sm border border-gray-300 rounded focus:ring-1 focus:ring-blue-500 focus:border-blue-500'}}) }}
					<span class="text-sm text-red-600 mt-1">{{ form_errors(form.invoicePrefix) }}</span>
				</div>
			</div>
		</div>
		<div class="bg-white p-6 rounded-lg border border-gray-200 shadow-sm">
			<div class="flex items-center mb-4">
				<svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-500 mr-2" fill="none" viewbox="0 0 24 24" stroke="currentColor">
					<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/>
				</svg>
				<h2 class="text-lg font-semibold text-gray-800">{{ 'Branding'|trans }}</h2>
			</div>

			<div class="space-y-4">
				<div>
					{{ form_label(form.logoPath, null, {
                'label_attr': {
                    'class': 'block text-sm font-medium text-gray-700 mb-2'
                }
            }) }}

					<div class="flex items-start gap-4">
						<label class="flex-1 cursor-pointer">
							<div class="flex items-center justify-between px-4 py-3 bg-gray-50 hover:bg-gray-100 rounded-lg border border-gray-300 transition-colors">
								<span class="text-sm text-gray-600 truncate mr-2">
									{{ 'Choose logo file...'|trans }}
								</span>
								<span class="text-xs bg-white px-2 py-1 rounded border border-gray-200 text-gray-500">
									{{ 'Browse'|trans }}
								</span>
								{{ form_widget(form.logoPath, {
                            'attr': {
                                'class': 'hidden'
                            }
                        }) }}
							</div>
						</label>

						{% if adminEntreprise.logoPath %}
							<div class="relative group">
								<img src="{{ asset('template/logo/' ~ adminEntreprise.logoPath) }}" alt="{{ 'Company Logo'|trans }}" class="h-14 w-14 object-contain rounded-lg border border-gray-200">
								<a href="{{ asset('template/logo/' ~ adminEntreprise.logoPath) }}" target="_blank" class="absolute inset-0 bg-black bg-opacity-0 group-hover:bg-opacity-20 rounded-lg transition-all flex items-center justify-center opacity-0 group-hover:opacity-100" title="{{ 'View full size'|trans }}">
									<span class="text-white bg-black bg-opacity-50 rounded-full p-1">
										<svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewbox="0 0 24 24" stroke="currentColor">
											<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
											<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
										</svg>
									</span>
								</a>
							</div>
						{% endif %}
					</div>

					{% if form_errors(form.logoPath) %}
						<p class="mt-2 text-sm text-red-600 flex items-start">
							<svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1 mt-0.5 flex-shrink-0" viewbox="0 0 20 20" fill="currentColor">
								<path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
							</svg>
							<span class="text-sm text-red-600 mt-1">{{ form_errors(form.logoPath) }}</span>
						</p>
					{% endif %}

					<p class="mt-2 text-xs text-gray-500">
						{{ 'Recommended size: 350Ã—70px, PNG or JPG format'|trans }}
					</p>
				</div>
			</div>
		</div>
		<div class="flex justify-end pt-4">
			<button type="submit" class="px-4 py-2 bg-blue-600 text-white text-sm font-medium rounded-md shadow-sm hover:bg-blue-700 focus:outline-none focus:ring-1 focus:ring-blue-500">
				{{ 'Save Settings'|trans }}
			</button>
		</div>

		{{ form_end(form) }}
	</div>
{% endblock %}
