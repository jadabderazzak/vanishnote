{% extends 'base.html.twig' %}

{% block title %}
    {{ 'System Logs'|trans }}
{% endblock %}

{% block body %}
    <div class="w-full mx-auto">
        <div class="bg-gray-50 shadow-md overflow-hidden">
            <!-- Header Section -->
            <div class="px-6 py-4 border-b border-gray-200 flex flex-col md:flex-row justify-start md:justify-between items-start md:items-center gap-4 w-full">
                <div class="w-full">
                    <h1 class="text-xl font-bold text-gray-800">{{ 'System Logs'|trans }}</h1>
                    <p class="text-gray-600 mt-1 text-sm">{{ 'View and manage system logs'|trans }}</p>
                </div>
                <div class="flex flex-row justify-between md:justify-end items-center gap-2 w-full">
                    <button class="flex items-center space-x-2 px-5 py-2 bg-trash hover:bg-trash_bold font-thin text-white rounded-sm transition-all">
                        <svg class="w-4 h-4 mr-1.5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24">
                            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 5v9m-5 0H5a1 1 0 0 0-1 1v4a1 1 0 0 0 1 1h14a1 1 0 0 0 1-1v-4a1 1 0 0 0-1-1h-2M8 9l4-5 4 5m1 8h0"/>
                        </svg>
                        <span class="text-sm">{{ 'Export Logs'|trans }}</span>
                    </button>
                </div>
            </div>

            {% if logs is empty %}
                <!-- Empty State -->
                <div class="px-6 py-12 text-center">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12 mx-auto text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                    </svg>
                    <h3 class="mt-2 text-lg font-medium text-gray-900">{{ 'No logs found'|trans }}</h3>
                    <p class="mt-1 text-gray-500">{{ 'System logs will appear here'|trans }}</p>
                </div>
            {% else %}
                <!-- Logs Table -->
                <div class="overflow-x-auto">
                    <table class="min-w-full divide-y divide-gray-200">
                        <thead class="bg-gray-50">
                            <tr>
                                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                    {{ 'Level'|trans }}
                                </th>
                                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                    {{ 'Message'|trans }}
                                </th>
                                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                    {{ 'Date'|trans }}
                                </th>
                                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                    {{ 'Status'|trans }}
                                </th>
                                <th scope="col" class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">
                                    {{ 'Actions'|trans }}
                                </th>
                            </tr>
                        </thead>
                        <tbody class="bg-white divide-y divide-gray-200">
                            {% for log in logs %}
                                <tr class="hover:bg-gray-50 transition-colors duration-150">
                                    <!-- Level Column -->
                                    <td class="px-6 py-4 whitespace-nowrap">
                                      {% if log.level == 500 %}
                                            <span class="px-2 py-1 rounded-full text-xs font-bold bg-red-100 text-red-800">
                                                {{ 'CRITICAL'|trans }}
                                            </span>
                                        {% elseif log.level == 400 %}
                                            <span class="px-2 py-1 rounded-full text-xs font-bold bg-orange-100 text-orange-800">
                                                {{ 'ERROR'|trans }}
                                            </span>
                                        {% elseif log.level == 300 %}
                                            <span class="px-2 py-1 rounded-full text-xs font-bold bg-yellow-100 text-yellow-800">
                                                {{ 'WARNING'|trans }}
                                            </span>
                                        {% else %}
                                            <span class="px-2 py-1 rounded-full text-xs font-bold bg-gray-100 text-gray-800">
                                                {{ 'UNKNOWN'|trans }}
                                            </span>
                                        {% endif %}
                                    </td>
                                    
                                    <!-- Message Column -->
                                    <td class="px-6 py-4">
                                        <div class="text-sm text-gray-900 max-w-xs truncate" title="{{ log.message }}">
                                            {{ log.message|length > 50 ? log.message|slice(0, 50) ~ '...' : log.message }}
                                        </div>
                                    </td>
                                    
                                    <!-- Date Column -->
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <div class="text-sm text-gray-500">
                                            {{ log.loggedAt|date('Y-m-d H:i:s') }}
                                        </div>
                                    </td>
                                    
                                    <!-- Status Column -->
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        {% if log.isHandled %}
                                            <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">
                                                {{ 'Handled'|trans }}
                                            </span>
                                        {% else %}
                                            <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-red-100 text-red-800">
                                                {{ 'Unhandled'|trans }}
                                            </span>
                                        {% endif %}
                                    </td>
                                    
                                    <!-- Actions Column -->
                                    <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                                        <div class="flex justify-end space-x-2">
                                            {% if not log.isHandled %}
                                                <button data-modal-target="handle-log-modal-{{ log.id }}" data-modal-toggle="handle-log-modal-{{ log.id }}" class="inline-flex items-center px-3 py-1.5 bg-blue-50 text-blue-600 hover:bg-blue-100 transition-all duration-200 text-xs font-medium shadow-xs border border-blue-100">
                                                    <svg class="w-4 h-4 mr-1.5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24">
                                                        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m14.304 4.844 2.852 2.852M7 7H4a1 1 0 0 0-1 1v10a1 1 0 0 0 1 1h11a1 1 0 0 0 1-1v-4.5m2.409-9.91a2.017 2.017 0 0 1 0 2.853l-6.844 6.844L8 14l.713-3.565 6.844-6.844a2.015 2.015 0 0 1 2.852 0Z"/>
                                                    </svg>
                                                    <span>{{ 'Mark as Handled'|trans }}</span>
                                                </button>
                                            {% endif %}
                                            
                                            <a href="{{ path('app_admin_logs_details',{id : log.id})}}" class="inline-flex items-center px-3 py-1.5 bg-gray-50 text-gray-600 hover:bg-gray-100 transition-all duration-200 text-xs font-medium shadow-xs border border-gray-200">
                                                <svg class="w-4 h-4 mr-1.5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24">
                                                    <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a28.076 28.076 0 0 1-1.091 9M7.231 4.37a8.994 8.994 0 0 1 12.88 3.73M2.958 15S3 14.577 3 12a8.949 8.949 0 0 1 1.735-5.307m12.84 3.088A5.98 5.98 0 0 1 18 12a30 30 0 0 1-.464 6.232M6 12a6 6 0 0 1 9.352-4.974M4 21a5.964 5.964 0 0 1 1.01-3.328 5.15 5.15 0 0 0 .786-1.926m8.66 2.486a13.96 13.96 0 0 1-.962 2.683M7.5 19.336C9 17.092 9 14.845 9 12a3 3 0 1 1 6 0c0 .749 0 1.521-.031 2.311M12 12c0 3 0 6-2 9"/>
                                                </svg>
                                                <span>{{ 'Details'|trans }}</span>
                                            </a>
                                        </div>
                                    </td>
                                </tr>

                                <!-- Handle Log Modal -->
                                <div id="handle-log-modal-{{ log.id }}" tabindex="-1" class="hidden overflow-y-auto overflow-x-hidden fixed top-0 right-0 left-0 z-50 justify-center items-center w-full md:inset-0 h-[calc(100%-1rem)] max-h-full bg-gray-900 bg-opacity-50">
                                    <div class="relative p-4 w-full max-w-md max-h-full">
                                        <div class="relative bg-white rounded-lg shadow">
                                            <button type="button" class="absolute top-3 end-2.5 text-gray-400 bg-transparent hover:bg-gray-200 rounded-lg text-sm w-8 h-8 ms-auto inline-flex justify-center items-center" data-modal-hide="handle-log-modal-{{ log.id }}">
                                                <svg class="w-3 h-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 14">
                                                    <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6"/>
                                                </svg>
                                                <span class="sr-only">{{ 'Close modal'|trans }}</span>
                                            </button>
                                            <div class="p-6 text-center">
                                                <svg class="mx-auto mb-4 text-gray-400 w-12 h-12" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 20 20">
                                                    <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M10 11V6m0 8h.01M19 10a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z"/>
                                                </svg>
                                                <h3 class="mb-4 text-lg font-normal text-gray-700">{{ 'Mark log as handled?'|trans }}</h3>
                                                <p class="mb-6 text-sm text-gray-500">{{ 'This will mark the log entry as handled. Are you sure?'|trans }}</p>
                                                <div class="flex justify-center space-x-4">
                                                    <a href="{{ path('app_admin_logs_handle', {id: log.id}) }}" class="px-5 py-2.5 text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 rounded-lg border border-blue-600 focus:ring-4 focus:outline-none focus:ring-blue-300 transition-colors">
                                                        {{ 'Yes, mark as handled'|trans }}
                                                    </a>
                                                    <button data-modal-hide="handle-log-modal-{{ log.id }}" type="button" class="px-5 py-2.5 text-sm font-medium text-gray-700 bg-white hover:bg-gray-100 rounded-lg border border-gray-200 focus:ring-4 focus:outline-none focus:ring-gray-100 transition-colors">
                                                        {{ 'No, cancel'|trans }}
                                                    </button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>

                <!-- Pagination -->
                <div class="px-6 py-4 border-t border-gray-200">
                    {{ knp_pagination_render(logs) }}
                </div>
            {% endif %}
        </div>
    </div>
{% endblock %}