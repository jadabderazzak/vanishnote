{% extends 'base.html.twig' %}

{% block title %}
    {{ 'Log Details'|trans }} #{{ log.id }}
{% endblock %}

{% block body %}
<div class="w-full shadow-sm mx-auto">
    <div class="bg-gray-50  overflow-hidden">
        <!-- Header Section -->
        <div class="px-6 py-4 border-b border-gray-200 flex flex-col md:flex-row justify-between items-start md:items-center gap-4">
            <div>
                <h1 class="text-2xl font-bold text-gray-800">{{ 'Log Details'|trans }}</h1>
                <p class="text-gray-600 mt-1 text-sm">ID: #{{ log.id }}</p>
            </div>
          
        </div>

        <!-- Main Content -->
        <div class="p-6">
            <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                <!-- Log Metadata -->
                <div class="col-span-1 space-y-4">
                    <div class="bg-gray-50 p-4 rounded-lg">
                        <h3 class="font-medium text-gray-900 mb-3">{{ 'Log Information'|trans }}</h3>
                        <div class="space-y-3">
                            <div>
                                <p class="text-sm text-gray-500">{{ 'Level'|trans }}</p>
                                <p class="mt-1 text-sm font-medium">
                                   {% if log.level == 500 %}
                                        <span class="px-2 py-1 rounded-full text-xs font-bold bg-red-100 text-red-800">
                                            {{ 'CRITICAL'|trans }}
                                        </span>
                                    {% elseif log.level == 400 %}
                                        <span class="px-2 py-1 rounded-full text-xs font-bold bg-orange-100 text-orange-800">
                                            {{ 'ERROR'|trans }}
                                        </span>
                                    {% elseif log.level == 300 %}
                                        <span class="px-2 py-1 rounded-full text-xs font-bold bg-yellow-100 text-yellow-800">
                                            {{ 'WARNING'|trans }}
                                        </span>
                                    {% else %}
                                        <span class="px-2 py-1 rounded-full text-xs font-bold bg-gray-100 text-gray-800">
                                            {{ 'UNKNOWN'|trans }}
                                        </span>
                                    {% endif %}
                                </p>
                            </div>

                            <div>
                                <p class="text-sm text-gray-500">{{ 'Status'|trans }}</p>
                                <p class="mt-1 text-sm font-medium">
                                    {% if log.isHandled %}
                                        <span class="px-2 py-1 rounded-full text-xs font-bold bg-green-100 text-green-800">
                                            {{ 'Handled'|trans }}
                                        </span>
                                    {% else %}
                                        <span class="px-2 py-1 rounded-full text-xs font-bold bg-red-100 text-red-800">
                                            {{ 'Unhandled'|trans }}
                                        </span>
                                    {% endif %}
                                </p>
                            </div>

                            <div>
                                <p class="text-sm text-gray-500">{{ 'Logged At'|trans }}</p>
                                <p class="mt-1 text-sm font-medium">
                                    {{ log.loggedAt|date('Y-m-d H:i:s') }}
                                </p>
                            </div>
                        </div>
                    </div>

                    <!-- Actions Card -->
                    <div class="bg-gray-50 p-4 rounded-lg">
                        <h3 class="font-medium text-gray-900 mb-3">{{ 'Actions'|trans }}</h3>
                        <div class="space-y-2">
                            {% if not log.isHandled %}
                                <a href="{{ path('app_admin_logs_handle', {id: log.id}) }}" class="w-full flex items-center justify-center px-4 py-2 bg-trash hover:trash_bold text-white rounded-md transition-colors">
                                    <svg class="w-5 h-5 mr-2" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                                        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m14.304 4.844 2.852 2.852M7 7H4a1 1 0 0 0-1 1v10a1 1 0 0 0 1 1h11a1 1 0 0 0 1-1v-4.5m2.409-9.91a2.017 2.017 0 0 1 0 2.853l-6.844 6.844L8 14l.713-3.565 6.844-6.844a2.015 2.015 0 0 1 2.852 0Z"/>
                                    </svg>
                                    {{ 'Mark as Handled'|trans }}
                                </a>
                            {% endif %}
                             <a href="{{path('app_system_logs')}}" class="w-full flex items-center justify-center px-4 py-2 bg-gray-200 hover:bg-gray-300 rounded-md transition-colors">
                       
                                <svg class="w-5 h-5 mr-2" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24">
                                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 12h14M5 12l4-4m-4 4 4 4"/>
                                </svg>

                                {{ 'Back To Logs'|trans }}
                            </a>
                        </div>
                    </div>
                </div>

                <!-- Log Message -->
                <div class="col-span-2">
                    <div class="bg-gray-50 p-4 rounded-lg h-full">
                        <h3 class="font-medium text-gray-900 mb-3">{{ 'Full Message'|trans }}</h3>
                        <div class="bg-white p-4 rounded-md border border-gray-200">
                            <pre class="text-sm text-gray-800 whitespace-pre-wrap font-mono">{{ log.message }}</pre>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}