{# templates/notes/secure.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}{{ 'Password Protected Note'|trans }}{% endblock %}

{% block body %}
<div class=" bg-gray-50 dark:bg-gray-900 flex flex-col justify-center py-12 sm:px-6 lg:px-8 mt-24">
    <div class="sm:mx-auto sm:w-full sm:max-w-md">
        <div class="text-center">
            <svg class="mx-auto h-12 w-12 text-indigo-600 dark:text-indigo-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/>
            </svg>
            <h2 class="mt-6 text-3xl font-extrabold text-gray-900 dark:text-white">
                {{ 'Secure Note Access'|trans }}
            </h2>
            <p class="mt-2 text-sm text-gray-600 dark:text-gray-400">
                {{ 'This note is protected with end-to-end encryption'|trans }}
            </p>
        </div>

        <div class="mt-8 bg-white dark:bg-gray-800 py-8 px-4 shadow rounded-lg sm:px-10 border border-gray-200 dark:border-gray-700">
            {# Flash messages #}
            {% for message in app.flashes('danger') %}
                <div class="mb-4 rounded-md bg-red-50 dark:bg-red-900/20 p-4">
                    <div class="flex">
                        <div class="flex-shrink-0">
                            <svg class="h-5 w-5 text-red-400 dark:text-red-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
                            </svg>
                        </div>
                        <div class="ml-3">
                            <h3 class="text-sm font-medium text-red-800 dark:text-red-200">{{ 'Security Alert'|trans }}</h3>
                            <div class="mt-2 text-sm text-red-700 dark:text-red-300">
                                <p>{{ message|trans }}</p>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}

            <form class="space-y-6" method="post">
                <div>
                    <label for="note_password" class="block text-sm font-medium text-gray-700 dark:text-gray-300">
                        {{ 'Enter Password'|trans }}
                    </label>
                    <div class="mt-1 relative rounded-md shadow-sm">
                        <input id="note_password" name="note_password" type="password" required placeholder="{{'Password Protected Note' | trans}}"
                            class="appearance-none block w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-md shadow-sm placeholder-gray-400 dark:placeholder-gray-500 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 dark:focus:ring-indigo-600 dark:focus:border-indigo-600 sm:text-sm bg-white dark:bg-gray-700 text-gray-900 dark:text-white">
                    </div>
                    <p class="mt-2 text-sm text-gray-500 dark:text-gray-400">
                        {{ 'The password was set by the note creator'|trans }}
                    </p>
                </div>

                <div>
                    <button type="submit"
                        class="w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 dark:focus:ring-indigo-600 transition-colors duration-200">
                        {{ 'Unlock Note'|trans }}
                    </button>
                </div>
            </form>
        </div>
<div class="mt-6 text-center text-sm text-gray-600 dark:text-gray-400">
    {{ "You have 3 attempts to enter the correct password"|trans }}
</div>
       
    </div>
</div>
{% endblock %}