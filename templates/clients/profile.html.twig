{# templates/client/profile.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}
    {{ client.name }} | {{ 'Profile'|trans }}
{% endblock %}

{% block body %}
    <div class="w-full mx-auto p-8">
        <!-- Header with edit button -->
        <div class="flex justify-between items-center mb-10">
            <div>
                <h1 class="text-xl font-bold text-gray-900">{{ 'My Account'|trans }}</h1>
                <p class="text-gray-500 mt-2 text-xs">{{ 'Manage your personal information'|trans }}</p>
            </div>
            <div>
            <a href="{{ path('app_clients_profile_update', {slug: client.slug}) }}" 
               class="flex items-center btn-general">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 20 20" fill="currentColor">
                    <path d="M13.586 3.586a2 2 0 112.828 2.828l-.793.793-2.828-2.828.793-.793zM11.379 5.793L3 14.172V17h2.828l8.38-8.379-2.83-2.828z" />
                </svg>
                <span class="text-sm">{{ 'Edit Profile'|trans }}</span>
            </a>
            <a 
               class="flex items-center btn-danger cursor-pointer"
               data-modal-target="delete-client-modal" data-modal-toggle="delete-client-modal"
               >
                
                <svg class="h-4 w-4" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24">
                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 7h14m-9 3v8m4-8v8M10 3h4a1 1 0 0 1 1 1v3H9V4a1 1 0 0 1 1-1ZM6 7h12v13a1 1 0 0 1-1 1H7a1 1 0 0 1-1-1V7Z"/>
                </svg>

                <span class="text-sm">{{ 'Delete Account'|trans }}</span>
            </a>
            </div>
        </div>

        <!-- Delete account Client Modal -->
			<div id="delete-client-modal" tabindex="-1" class="hidden overflow-y-auto overflow-x-hidden fixed top-0 right-0 left-0 z-50 justify-center items-center w-full md:inset-0 h-[calc(100%-1rem)] max-h-full bg-gray-900 bg-opacity-50">
				<div class="relative p-4 w-full max-w-lg max-h-full">
					<div class="relative bg-white rounded-lg shadow">
						<button type="button" class="absolute top-3 end-2.5 text-gray-400 bg-transparent hover:bg-gray-200 rounded-lg text-sm w-8 h-8 ms-auto inline-flex justify-center items-center" data-modal-hide="delete-client-modal">
							<svg class="w-3 h-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewbox="0 0 14 14">
								<path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6"/>
							</svg>
							<span class="sr-only">{{ 'Close modal' | trans }}</span>
						</button>
						<div class="p-6 text-center">
							<svg class="mx-auto mb-4 text-gray-400 w-12 h-12" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewbox="0 0 20 20">
								<path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M10 11V6m0 8h.01M19 10a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z"/>
							</svg>
							<h3 class="mb-4 text-lg font-normal text-gray-700">{{ 'Are you sure you want to delete your account?' | trans }}</h3>
							<p class="mb-6 text-sm text-gray-500">{{ 'Deleting your account will permanently erase all your personal data, including your notes and any active subscription' | trans }}</p>
							<div class="flex justify-center space-x-4">
								<a href="{{ path('app_clients_delete_account')}}" data-modal-hide="delete-client-modal" type="button" class="px-5 py-2.5 text-sm font-medium text-white bg-red-600 hover:bg-red-700 rounded-lg border border-red-600 focus:ring-4 focus:outline-none focus:ring-red-300 transition-colors">
									{{ 'Yes, i want to delete it' | trans }}
								</a>
								<button data-modal-hide="delete-client-modal" type="button" class="px-5 py-2.5 text-sm font-medium text-gray-700 bg-white hover:bg-gray-100 rounded-lg border border-gray-200 focus:ring-4 focus:outline-none focus:ring-gray-100 transition-colors">
									{{ 'No, cancel' | trans }}
								</button>
							</div>
						</div>
					</div>
				</div>
			</div>

        <!-- Profile Card -->
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
            <!-- Main Profile Section -->
            <div class="lg:col-span-2 space-y-8">
                <!-- Personal Information -->
                <div class=" p-6 border bg-gradient-to-r from-white to-gray-50 rounded-[15px] shadow-[0_5px_12px_rgba(0,0,0,0.06)] transition-all duration-300 ease-in-out">
                    <h2 class="text-xl font-semibold mb-6 pb-2 border-b border-gray-100 text-gray-800 flex items-center space-x-2">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-blue-500" viewBox="0 0 20 20" fill="currentColor">
                            <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd" />
                        </svg>
                        <span>{{ 'Personal Information'|trans }}</span>
                    </h2>
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <div>
                            <p class="text-sm font-medium text-gray-500 mb-1">{{ 'Full Name'|trans }}</p>
                            <p class="text-gray-900">{{ client.name }}</p>
                        </div>
                        <div>
                            <p class="text-sm font-medium text-gray-500 mb-1">{{ 'Phone Number'|trans }}</p>
                            <p class="text-gray-900">{{ client.phone ?? ('Not provided'|trans) }}</p>
                        </div>
                    </div>
                     <div class="mt-4">
                       
                        <div>
                            <p class="text-sm font-medium text-gray-500 mb-1">{{ 'Country'|trans }}</p>
                            <p class="text-gray-900">{{ client.country == null ? ('Not provided'|trans) : (client.country.name|capitalize|trans) }}</p>
                        </div>
                    </div>
                </div>

                <!-- Company Information (Conditional) -->
                {% if client.isCompany %}
                <div class=" p-6 bg-gradient-to-r from-white to-gray-50 rounded-[15px] border shadow-[0_5px_12px_rgba(0,0,0,0.06)] transition-all duration-300 ease-in-out">
                    <h2 class="text-xl font-semibold mb-6 pb-2 border-b border-gray-100 text-gray-800 flex items-center space-x-2">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-blue-500" viewBox="0 0 20 20" fill="currentColor">
                            <path fill-rule="evenodd" d="M4 4a2 2 0 012-2h8a2 2 0 012 2v12a1 1 0 110 2h-3a1 1 0 01-1-1v-2a1 1 0 00-1-1H9a1 1 0 00-1 1v2a1 1 0 01-1 1H4a1 1 0 110-2V4zm3 1h2v2H7V5zm2 4H7v2h2V9zm2-4h2v2h-2V5zm2 4h-2v2h2V9z" clip-rule="evenodd" />
                        </svg>
                        <span>{{ 'Company Information'|trans }}</span>
                    </h2>
                    <div class="space-y-6">
                        <div>
                            <p class="text-sm font-medium text-gray-500 mb-1">{{ 'Company Name'|trans }}</p>
                            <p class="text-gray-900">{{ client.company }}</p>
                        </div>
                        <div>
                            <p class="text-sm font-medium text-gray-500 mb-1">{{ 'Company Address'|trans }}</p>
                            <p class="text-gray-900">{{ client.companyAdress ?? ('Not provided'|trans) }}</p>
                        </div>
                        <div>
                            <p class="text-sm font-medium text-gray-500 mb-1">{{ 'VAT Number'|trans }}</p>
                            <p class="text-gray-900">{{ client.vatNumber ?? ('Not provided'|trans) }}</p>
                        </div>
                    </div>
                </div>
                {% endif %}
            </div>

            <!-- Activity Sidebar -->
            <div class="space-y-8">
                <!-- Stats Card -->
                <div class="bg-gradient-to-r from-white to-gray-50  rounded-[15px] border shadow-[0_5px_12px_rgba(0,0,0,0.06)] transition-all duration-300 ease-in-out p-6 ">
                    <h2 class="text-xl font-semibold mb-6 pb-2 border-b border-gray-100 text-gray-800">{{ 'Activity'|trans }}</h2>
                    <div class="flex items-center space-x-4">
                        <div class="bg-blue-100 p-3 rounded-full">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-blue-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                            </svg>
                        </div>
                        <div>
                            <p class="text-sm font-medium text-gray-500">{{ 'Notes Created'|trans }}</p>
                            <p class="text-3xl font-bold text-gray-900">{{ notesCreated }}</p>
                        </div>
                    </div>
                </div>

                <!-- Account Type -->
                <div class="bg-gradient-to-r from-white to-gray-50  rounded-[15px] border shadow-[0_5px_12px_rgba(0,0,0,0.06)] transition-all duration-300 ease-in-out p-6 ">
                    <h2 class="text-xl font-semibold mb-4 text-gray-800">{{ 'Account Type'|trans }}</h2>
                    <div class="flex items-center space-x-3">
                        <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium {% if client.isCompany %}bg-green-100 text-green-800{% else %}bg-blue-100 text-blue-800{% endif %}">
                            {% if client.isCompany %}
                                {{ accountType |trans }}
                            {% else %}
                                {{ 'Individual'|trans }}
                            {% endif %}
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}